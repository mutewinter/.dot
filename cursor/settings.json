  "chat.editor.fontSize": 15,
  "cursor.cmdk.useThemedDiffBackground": true,
  "debug.console.fontSize": 15,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.accessibilitySupport": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit"
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "SauceCodePro Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "fit",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 7,
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "none",
  "editor.tabSize": 2,
  "explorer.autoReveal": "focusNoScroll",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "files.autoSave": "onFocusChange",
  "files.refactoring.autoSave": false,
  "find-it-faster.advanced.disableStartupChecks": true,
  "find-it-faster.general.batTheme": "Visual Studio Dark+",
  "find-it-faster.general.killTerminalAfterUse": true,
  "find-it-faster.general.shellPathForTerminal": "/bin/bash",
  "find-it-faster.general.useTerminalInEditor": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "lazygit-vscode.autoMaximizeWindow": false,
  "peacock.favoriteColors": [
    {
      "name": "Dark Yellow",
      "value": "#281e07"
    },
    {
      "name": "Black",
      "value": "#000000"
    },
    {
      "name": "Dark Green",
      "value": "#3b4c15"
    }
  ],
  "search.exclude": {
    "**/*.code-search": true,
    "**/.yarn/releases/*": true,
    "**/bower_components": true,
    "**/node_modules": true,
    "**/yarn.lock": true
  },
  "sqltools.useNodeRuntime": true,
  "tailwindCSS.experimental.classRegex": [
    ["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.tabs.enabled": false,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vscode_custom_css.imports": ["file://${userHome}/.dot/cursor/styles.css"],
  "window.commandCenter": false,
  "workbench.activityBar.location": "top",
  "workbench.activityBar.orientation": "vertical",
  "workbench.colorCustomizations": {
    "editor.background": "#090909",
    // Visible current line
    "editor.lineHighlightBackground": "#ffffff0A",
    // Stop the overbearing highlight of entire strings
    "editor.wordHighlightBackground": "#00000000",
    "terminal.background": "#090909"
  },
  "workbench.colorTheme": "Jellybeans+",
  "workbench.editor.showTabs": "none",
  "workbench.panel.defaultLocation": "right",
  "workbench.preferredDarkColorTheme": "Jellybeans+",
  "lazygit-vscode.autoMaximizeWindow": true,
  "lazygit-vscode.autoHidePanel": true,
  "terminal.integrated.shellIntegration.history": 1000,
  "git.confirmSync": false
}
